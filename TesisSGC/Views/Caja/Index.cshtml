@model TesisSGC.Caja

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Caja</h2>
        <button type="button" class="btn btn-outline-primary"
                onclick="toggleSaldoInicialForm()">
            Editar saldo inicial
        </button>
    </div>
    <p><strong>Caja abierta desde:</strong> @Model.FechaApertura.ToShortDateString()</p>
    <p><strong>Saldo inicial:</strong> @Model.SaldoInicial.ToString("C")</p>
    <div id="editarSaldoInicial" style="display: none;">
        <div class="card shadow-sm mb-3">
            <div class="card-body">
                @using (Html.BeginForm("EditarSaldoInicial", "Caja", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("IdCaja", Model.IdCaja)

                    <div class="mb-3">
                        <label for="nuevoSaldoInicial" class="form-label">Nuevo saldo inicial</label>
                        <input type="number" step="0.01" name="nuevoSaldoInicial" class="form-control" required />
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <button type="submit" class="btn btn-success">Guardar</button>
                        <button type="button" class="btn btn-secondary" onclick="toggleSaldoInicialForm()">Cancelar</button>
                    </div>
                }
            </div>
        </div>
    </div>
    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success">
            @TempData["Mensaje"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    <div class="card border-primary mb-3">
        <div class="card-header bg-primary text-white text-center">
            Saldo Actual
        </div>
        <div class="card-body text-center">
            <h2 class="card-title" style="font-size:2rem; font-weight:bold;">
                @Model.SaldoActual.ToString("C")
            </h2>
        </div>
    </div>




    <div class="row mb-4">
        <!-- Entradas -->
        <div class="col-md-6">
            <div class="card border-success">
                <div class="card-header bg-success text-white">Entradas</div>
                <div class="card-body">
                    <p>Total: @Model.Movimientos.Where(m => m.EsEntrada).Sum(m => m.Monto).ToString("C")</p>
                    <p>Efectivo: @Model.Movimientos.Where(m => m.EsEntrada && m.Medio == "Efectivo").Sum(m => m.Monto).ToString("C")</p>
                    <p>Banco: @Model.Movimientos.Where(m => m.EsEntrada && m.Medio == "Banco").Sum(m => m.Monto).ToString("C")</p>
                </div>
            </div>
        </div>

        <!-- Salidas -->
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">Salidas</div>
                <div class="card-body">
                    <p>Total: -@Model.Movimientos.Where(m => !m.EsEntrada).Sum(m => m.Monto).ToString("C")</p>
                    <p>Efectivo: -@Model.Movimientos.Where(m => !m.EsEntrada && m.Medio == "Efectivo").Sum(m => m.Monto).ToString("C")</p>
                    <p>Banco: -@Model.Movimientos.Where(m => !m.EsEntrada && m.Medio == "Banco").Sum(m => m.Monto).ToString("C")</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Detalle Entradas -->
    <h3>Entradas</h3>
    @if (!Model.Movimientos.Any(m => m.EsEntrada))
    {
        <div class="alert alert-info">Aún no hay entradas registradas.</div>
    }
    else
    {
        <div style="max-height: 200px; overflow-y: auto; border: 1px solid #ccc; padding: 10px; border-radius: 5px;">
            <table class="table table-striped table-sm mb-0">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Descripción</th>
                        <th>Medio</th>
                        <th>Monto</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var mov in Model.Movimientos.Where(m => m.EsEntrada))
                    {
                        <tr>
                            <td>@mov.Fecha.ToShortDateString()</td>
                            <td>@mov.Descripcion</td>
                            <td>@mov.Medio</td>
                            <td>@mov.Monto.ToString("C")</td>
                            <td>
                                @if (mov.IdPagoSocio != null)
                                {
                                    <a class="btn btn-sm btn-outline-info"
                                       href="@Url.Action("Details", "PagoSocios", new { id = mov.IdPagoSocio, returnUrl = Url.Action("Index", "Caja") })">
                                        Detalles
                                    </a>
                                }
                                else if (mov.IdPagoProveedor != null)
                                {
                                    <a class="btn btn-sm btn-outline-info"
                                       href="@Url.Action("Details", "PagoProveedors", new { id = mov.IdPagoProveedor, returnUrl = Url.Action("Index", "Caja")  })">
                                        Detalles
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    <hr />
    <!-- Detalle Salidas -->
    <h3>Salidas</h3>
    @if (!Model.Movimientos.Any(m => !m.EsEntrada))
    {
        <div class="alert alert-warning">Aún no hay salidas registradas.</div>
    }
    else
    {
        <div style="max-height: 200px; overflow-y: auto; border: 1px solid #ccc; padding: 10px; border-radius: 5px;">
            <table class="table table-striped table-sm mb-0">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Descripción</th>
                        <th>Medio</th>
                        <th>Monto</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var mov in Model.Movimientos.Where(m => !m.EsEntrada))
                    {
                        <tr>
                            <td>@mov.Fecha.ToShortDateString()</td>
                            <td>@mov.Descripcion</td>
                            <td>@mov.Medio</td>
                            <td>@mov.Monto.ToString("C")</td>
                            <td>
                                @if (mov.IdPagoSocio != null)
                                {
                                    <a class="btn btn-sm btn-outline-info"
                                       href="@Url.Action("Details", "PagoSocios", new { id = mov.IdPagoSocio, returnUrl = Url.Action("Index", "Caja") })">
                                        Detalles
                                    </a>
                                }
                                else if (mov.IdPagoProveedor != null)
                                {
                                    <a class="btn btn-sm btn-outline-info"
                                       href="@Url.Action("Details", "PagoProveedors", new { id = mov.IdPagoProveedor, returnUrl = Url.Action("Index", "Caja")  })">
                                        Detalles
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
    <script>
        function toggleSaldoInicialForm() {
            var section = document.getElementById("editarSaldoInicial");
            section.style.display = (section.style.display === "none" || section.style.display === "")
                ? "block" : "none";
        }
    </script>
}
