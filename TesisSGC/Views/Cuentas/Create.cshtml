@model TesisSGC.Cuenta
@using TesisSGC

@{
    ViewBag.Title = "Crear Cuenta";
}

<h2 class="mb-4">Crear Cuenta</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card p-4 shadow-sm">
        <h4 class="mb-3">Cuenta</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="mb-3 row">
            @Html.LabelFor(model => model.IdCuenta, "Socio", htmlAttributes: new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.DropDownListFor(model => model.IdCuenta,
                    ViewBag.IdCuenta as SelectList,
                    "-- Seleccione un socio --",
                    new { @class = "form-select" })
                @Html.ValidationMessageFor(model => model.IdCuenta, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="d-flex justify-content-end">
            <input type="submit" value="Crear" class="btn btn-success me-2" />
            @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
