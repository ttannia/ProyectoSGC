@model TesisSGC.Cuenta

@{
    ViewBag.Title = "Editar Cuenta";
}

<h2 class="mb-4">Editar Cuenta</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="card p-4 shadow-sm">
    <h4 class="mb-3">Cuenta</h4>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.IdCuenta)

    
    <div class="mb-3 row">
        @Html.LabelFor(model => model.Socio.IdSocio, "Socio", htmlAttributes: new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.DropDownListFor(model => model.Socio.IdSocio,
                ViewBag.IdSocio as SelectList,
                "-- Seleccione un socio --",
                new { @class = "form-select" })
            @Html.ValidationMessageFor(model => model.Socio.IdSocio, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Total pendiente (calculado)</label>
        <div class="col-sm-10">
            <p class="form-control-plaintext">@Model.TotalPendienteEnPesos.ToString("C")</p>
        </div>
    </div>

    <div class="d-flex justify-content-end">
        <input type="submit" value="Guardar" class="btn btn-primary me-2" />
        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
