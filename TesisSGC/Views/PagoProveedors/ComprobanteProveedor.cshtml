@model TesisSGC.ComprobanteProveedor
@using System.Globalization
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Comprobante de Pago a Proveedor</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 14px;
        }

        .comprobante {
            border: 1px solid #000;
            padding: 20px;
            max-width: 700px;
            margin: auto;
            box-sizing: border-box;
        }

        h2 {
            text-align: center;
        }

        .section {
            margin-bottom: 15px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        td {
            padding: 5px;
            vertical-align: top;
        }

        .bold {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="comprobante">
        <h2>Comprobante de Pago a Proveedor</h2>

        <div class="section">
            <table>
                <tr>
                    <td class="bold">Nro. Comprobante:</td>
                    <td>@Model.NumeroComprobante</td>
                </tr>
                <tr>
                    <td class="bold">Fecha de emisión:</td>
                    <td>@Model.FechaEmision.ToString("dd/MM/yyyy")</td>
                </tr>
                <tr>
                    <td class="bold">Proveedor:</td>
                    <td>@Model.PagoProveedor.Proveedor.Nombre (@Model.PagoProveedor.Proveedor.RUT)</td>
                </tr>
                <tr>
                    <td class="bold">Fecha de pago:</td>
                    <td>@Model.PagoProveedor.FechaPago.ToString("dd/MM/yyyy")</td>
                </tr>
            </table>
        </div>

        <div class="section">
            <table>
                <tr>
                    <td class="bold">Monto (UYU):</td>
                    <td>@Model.PagoProveedor.Monto.ToString("N2")</td>
                </tr>
                <tr>
                    <td class="bold">Forma de pago:</td>
                    <td>@Model.PagoProveedor.FormaPago</td>
                </tr>
                <tr>
                    <td class="bold">Tipo de pago:</td>
                    <td>@Model.PagoProveedor.TipoPago</td>
                </tr>
                @if (Model.PagoProveedor.FormaPago == "Transferencia" && !string.IsNullOrEmpty(Model.PagoProveedor.NumeroTransferencia))
                {
                    <tr>
                        <td class="bold">Nro. Transferencia:</td>
                        <td>@Model.PagoProveedor.NumeroTransferencia</td>
                    </tr>
                }
                else if (Model.PagoProveedor.FormaPago == "Cheque" && !string.IsNullOrEmpty(Model.PagoProveedor.NumeroCheque))
                {
                    <tr>
                        <td class="bold">Nro. Cheque:</td>
                        <td>@Model.PagoProveedor.NumeroCheque</td>
                    </tr>
                }
                else if (Model.PagoProveedor.FormaPago == "Débito" && !string.IsNullOrEmpty(Model.PagoProveedor.NumeroTransaccion))
                {
                    <tr>
                        <td class="bold">Nro. Transacción:</td>
                        <td>@Model.PagoProveedor.NumeroTransaccion</td>
                    </tr>
                }
            </table>
        </div>

        @if (!string.IsNullOrEmpty(Model.PagoProveedor.Observaciones))
        {
            <div class="section">
                <b>Observaciones:</b> @Model.PagoProveedor.Observaciones
            </div>
        }

        <div class="section" style="text-align:center; margin-top:30px;">
            <small>Este comprobante no tiene validez fiscal</small>
        </div>
    </div>
</body>
</html>
