@model IEnumerable<TesisSGC.PagoProveedor>

@{
    ViewBag.Title = "Pagos a Proveedores";
}

<h2 class="mb-4">Pagos de Proveedores</h2>

<div class="row mb-3">
    <div class="col-md-6">
        <input type="text" id="busquedaPagosProveedores" placeholder="Buscar por proveedor, RUT, forma de pago, tipo de pago, observaciones..." class="form-control" />
    </div>
    <div class="col-md-6">
        @Html.ActionLink("Registrar Pago", "SeleccionarProveedorParaPago", null, new { @class = "btn btn-success" })
    </div>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div id="resultadoBusquedaPagosProveedores">
    @Html.Partial("_PagosProveedoresParcial", Model)
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#busquedaPagosProveedores').on('input', function () {
                var query = $(this).val();
                $.get('@Url.Action("BuscarPagos", "PagoProveedors")', { query: query }, function (data) {
                    $('#resultadoBusquedaPagosProveedores').html(data);
                });
            });
        });
    </script>
}
