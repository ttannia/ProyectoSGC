@model IEnumerable<TesisSGC.PagoProveedor>

<table class="table table-bordered table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Proveedor</th>
            <th>Fecha de Pago</th>
            <th>Monto</th>
            <th>Forma de Pago</th>
            <th>Tipo de Pago</th>
            <th>Observaciones</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="7" class="text-center text-muted">No se encontraron pagos.</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Proveedor.Nombre (@item.Proveedor.RUT)</td>
                    <td>@item.FechaPago.ToString("dd/MM/yyyy")</td>
                    <td>@item.Monto.ToString("N2")</td>
                    <td>@item.FormaPago</td>
                    <td>@item.TipoPago</td>
                    <td>@item.Observaciones</td>
                    <td class="text-center">
                        @Html.ActionLink("Editar", "Edit", new { id = item.IdPagoProveedor }, new { @class = "btn btn-sm btn-primary me-1" })
                        @Html.ActionLink("Detalles", "Details", new { id = item.IdPagoProveedor }, new { @class = "btn btn-sm btn-info me-1" })
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.IdPagoProveedor }, new { @class = "btn btn-sm btn-danger" })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
