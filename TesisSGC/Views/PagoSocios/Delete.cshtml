@model TesisSGC.PagoSocio

@{
    ViewBag.Title = "Eliminar Pago de Socio";
}

<h2 class="mb-4">Eliminar Pago</h2>

<div class="alert alert-danger">
    <h4 class="alert-heading">¿Estás seguro que deseas eliminar este pago?</h4>
    <p>Esta acción eliminará permanentemente el registro del pago. No podrá ser recuperado.</p>
</div>

<div class="card mb-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Cuota</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CuotaMensual.Tipo)</dd>

            <dt class="col-sm-3">Socio</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Socio.NombreSocio)</dd>

            <dt class="col-sm-3">Fecha de Pago</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaPago)</dd>

            <dt class="col-sm-3">Monto</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Monto)</dd>

            <dt class="col-sm-3">Forma de Pago</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.FormaPago)</dd>

            <dt class="col-sm-3">Tipo de Pago</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.TipoPago)</dd>

            <dt class="col-sm-3">Observaciones</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Observaciones)</dd>
        </dl>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.IdPagoSocio)

    <div class="d-flex gap-2 mt-3">
        <input type="submit" value="Eliminar permanentemente" class="btn btn-danger" />
        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary" })
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
