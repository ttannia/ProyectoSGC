@model IEnumerable<TesisSGC.PagoSocio>
@{
    ViewBag.Title = "Pagos de Socios";
}

<h2 class="mb-4">Pagos de Socios</h2>

<div class="row mb-3">
    <div class="col-md-6">
        <input type="text" id="busquedaPagos" placeholder="Buscar por socio, CI, tipo, forma de pago..." class="form-control" />
    </div>
    <div class="col-md-6">
        @Html.ActionLink("Registrar Pago", "SeleccionarSocioParaPago", null, new { @class = "btn btn-success" })
    </div>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div id="resultadoBusquedaPagos">
    @Html.Partial("_PagosParcial", Model)
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#busquedaPagos').on('input', function () {
                var query = $(this).val();
                $.get('@Url.Action("BuscarPagos", "PagoSocios")', { query: query }, function (data) {
                    $('#resultadoBusquedaPagos').html(data);
                });
            });
        });
    </script>
}