@model TesisSGC.Proveedor

@{
    ViewBag.Title = "Detalles del Proveedor";
}

<h2 class="mb-4">Detalles del Proveedor</h2>

<div class="mb-4">
    <h4>Información General</h4>
    <table class="table table-bordered w-auto">
        <tbody>
            <tr>
                <th>Nombre</th>
                <td>@Model.Nombre</td>
            </tr>
            <tr>
                <th>RUT</th>
                <td>@Model.RUT</td>
            </tr>
            <tr>
                <th>Dirección</th>
                <td>@Model.Direccion</td>
            </tr>
            <tr>
                <th>Teléfono</th>
                <td>@Model.Telefono</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>
                    <span class="badge @(Model.Estado ? "bg-success" : "bg-secondary")">
                        @(Model.Estado ? "Activo" : "Inactivo")
                    </span>
                </td>
            </tr>
        </tbody>
    </table>
</div>

<div class="mb-4">
    <h4>Pagos</h4>

    @if (ViewBag.PagosProveedor != null && ((List<TesisSGC.PagoProveedor>)ViewBag.PagosProveedor).Any())
    {
        var pagos = (List<TesisSGC.PagoProveedor>)ViewBag.PagosProveedor;
        var comprobantes = (List<TesisSGC.ComprobanteProveedor>)ViewBag.Comprobantes;

        <table class="table table-bordered table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Fecha</th>
                    <th>Monto</th>
                    <th>Forma de Pago</th>
                    <th>Observaciones</th>
                    <th>Comprobante</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pago in pagos)
                {
                    var comprobante = comprobantes.FirstOrDefault(c => c.IdPagoProveedor == pago.IdPagoProveedor);
                    <tr>
                        <td>@pago.FechaPago.ToString("dd/MM/yyyy")</td>
                        <td>@pago.Monto.ToString("C")</td>
                        <td>@pago.FormaPago</td>
                        <td>@pago.Observaciones</td>
                        <td>
                            @if (comprobante != null)
                            {
                                <a href="@Url.Action("Comprobante", "PagoProveedors", new { id = comprobante.IdComprobanteProveedor })"
                                   class="btn btn-sm btn-primary" target="_blank">
                                    Ver Comprobante
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">Sin comprobante</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No hay pagos registrados para este proveedor.</p>
    }
</div>

<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.IdProveedor }, new { @class = "btn btn-success" })
    @Html.ActionLink("Volver al listado", "Index", new { }, new { @class = "btn btn-secondary" })
</p>
