@model IEnumerable<TesisSGC.PagoSocio>

@{
    Layout = null;

    var pagos = Model != null ? Model.ToList() : new List<TesisSGC.PagoSocio>();

    int? mes = ViewBag.Mes as int?;
    int? anio = ViewBag.Anio as int?;
    int? idSocio = ViewBag.IdSocio as int?;
    string mesTexto = (mes.HasValue && anio.HasValue) ? new DateTime(anio.Value, mes.Value, 1).ToString("MMMM yyyy") : "Todos los meses";

    var pagosFiltrados = pagos
        .Where(p => (!mes.HasValue || (p.FechaPago.Month == mes.Value && p.FechaPago.Year == anio.Value))
                    && (!idSocio.HasValue || p.IdSocio == idSocio.Value))
        .ToList();

}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Reporte de Pagos de Socios</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 14px;
        }

        .reporte {
            border: 1px solid #000;
            padding: 20px;
            max-width: 900px;
            margin: auto;
            box-sizing: border-box;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 15px;
        }

        th, td {
            border: 1px solid #000;
            padding: 6px;
            text-align: center;
        }

        th {
            background-color: #f2f2f2;
        }

        .mensaje {
            text-align: center;
            font-style: italic;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="reporte">
        <h2>Reporte de Pagos de Socios - @mesTexto</h2>

        @if (ViewBag.NombreSocio != null)
        {
            <h4>Socio: @ViewBag.NombreSocio (@ViewBag.CI)</h4>
        }

        @if (!pagos.Any())
        {
            <p class="mensaje">No existen pagos registrados.</p>
        }
        else if (idSocio.HasValue && !pagosFiltrados.Any())
        {
            <p class="mensaje">No se registraron pagos para este socio en el mes seleccionado (@mesTexto).</p>
        }
        else if (!idSocio.HasValue && !pagosFiltrados.Any())
        {
            <p class="mensaje">No se registraron pagos en el mes seleccionado (@mesTexto).</p>
        }
        else
        {
            <table>
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Socio</th>
                        <th>CI</th>
                        <th>Monto (UYU)</th>
                        <th>Forma de pago</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in pagosFiltrados)
                    {
                        <tr>
                            <td>@p.FechaPago.ToString("dd/MM/yyyy")</td>
                            <td>@p.Socio.NombreSocio</td>
                            <td>@p.Socio.CI</td>
                            <td>@p.Monto.ToString("N2")</td>
                            <td>@p.FormaPago</td>
                        </tr>
                    }
                </tbody>
            </table>
        }

    </div>
</body>
</html>
