@model IEnumerable<TesisSGC.Proveedor>
@{
    Layout = null;

    var proveedores = Model != null ? Model.ToList() : new List<TesisSGC.Proveedor>();
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 13px;
        }

        .reporte {
            border: 1px solid #000;
            padding: 20px;
            max-width: 950px;
            margin: auto;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            border: 1px solid #000;
            padding: 6px;
            text-align: center;
        }

        th {
            background-color: #f2f2f2;
        }

        .mensaje {
            text-align: center;
            font-style: italic;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="reporte">
        <h2>Reporte de Proveedores</h2>

        @if (!proveedores.Any())
        {
            <p class="mensaje">No existen proveedores registrados.</p>
        }
        else
        {
            <table>
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>RUT</th>
                        <th>Dirección</th>
                        <th>Teléfono</th>
                        <th>Email</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var proveedor in proveedores)
                    {
                        <tr>
                            <td>@proveedor.Nombre</td>
                            <td>@proveedor.RUT</td>
                            <td>@proveedor.Direccion</td>
                            <td>@proveedor.Telefono</td>
                            <td>@proveedor.Email</td>
                            <td>@(proveedor.Estado ? "Activo" : "Inactivo")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</body>
</html>
