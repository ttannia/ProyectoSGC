@model Socio

@{
    ViewBag.Title = "Editar Socio";
}

<h2 class="mb-4">Editar Socio</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.IdSocio)
<div class="card shadow-sm mb-3">
    <div class="card-body">
        <div class="mb-3">
            @Html.LabelFor(model => model.NombreSocio, htmlAttributes: new { @class = "form-label" })
            @Html.EditorFor(model => model.NombreSocio, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NombreSocio, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.CI, htmlAttributes: new { @class = "form-label" })
            @Html.EditorFor(model => model.CI, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CI, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Direccion, htmlAttributes: new { @class = "form-label" })
            @Html.EditorFor(model => model.Direccion, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Direccion, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.TelSocio, htmlAttributes: new { @class = "form-label" })
            @Html.EditorFor(model => model.TelSocio, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TelSocio, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.Label("Estado", htmlAttributes: new { @class = "form-label" })
            @Html.DropDownListFor(model => model.Estado, new List<SelectListItem>
            {
                new SelectListItem { Text = "Activo", Value = "true", Selected = Model.Estado },
                new SelectListItem { Text = "Inactivo", Value = "false", Selected = !Model.Estado }
            }, htmlAttributes: new { @class = "form-select" })
            @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
        </div>

        <div class="d-flex gap-2 mt-4">
            <input type="submit" value="Guardar cambios" class="btn btn-success me-2" />
            @Html.ActionLink("Volver al listado", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
</div>
            }

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
