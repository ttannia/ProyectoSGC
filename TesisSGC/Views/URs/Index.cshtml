@model IEnumerable<TesisSGC.UR>

@{
    ViewBag.Title = "Listado de UR";
}

<h2 class="mb-4">Listado de Unidades Reajustables (UR)</h2>

<div class="mb-3">
    @Html.ActionLink("Nueva UR", "Create", null, new { @class = "btn btn-success" })
</div>

<table class="table table-striped table-bordered shadow-sm">
    <thead class="thead-dark">
        <tr>
            <th>Mes</th>
            <th>Monto</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Mes.ToString("MM/yyyy")</td>
                <td>$ @item.Monto.ToString("N2")</td>
                <td class="text-center">
                    @Html.ActionLink("Editar", "Edit", new { id = item.IdUR }, new { @class = "btn btn-sm btn-primary me-2" })
                  
                </td>
            </tr>
        }
    </tbody>
</table>
