@model Usuario

@{
    ViewBag.Title = "Eliminar Usuario";
}

<h2 class="mb-4">Eliminar Usuario</h2>

<div class="alert alert-danger">
    <h4 class="alert-heading">¿Estás seguro que deseas eliminar este usuario?</h4>
    <p>Esta acción eliminará permanentemente al usuario del sistema. No podrá ser recuperado.</p>
</div>

<div class="card mb-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Socio vinculado</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Socio.NombreSocio)</dd>

            <dt class="col-sm-3">Nombre de usuario</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.NombreUsuario)</dd>

            <dt class="col-sm-3">Rol</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Rol)</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>
        </dl>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="d-flex gap-2">
        <input type="submit" value="Eliminar permanentemente" class="btn btn-danger" />
        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary" })
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
